@model IEnumerable<HumorProteomics.Models.ClinicalData>
@{
    ViewData["Title"] = "Index";
    SortModel sortModel = (SortModel)ViewData["sortModel"];
    PagerModel pager = ViewBag.Pager;
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

<h3 class="text-center"><i class="fas fa-comment-doller text-success"></i> Clinical Data Information </h3>

<hr />

<div class="row">
    <div class="col-12">
        <partial name="_topBar" model="@pager" />
    </div>
</div>

<div class="table-responsive-lg">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SampleID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Race)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ethnicity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IOP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IOPM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Incisional)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Smoking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HTN)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.CVD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CVA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diabetes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SysDiseases)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Glaucoma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cataract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DryEye)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Laser)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.DR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiabL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OEyeD)
            </th>
            <th>Action</th>
            <th>
                <a asp-action="Create" class="btn btn-success text-white"><i class="fas fa-random"></i>Clinical Data</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SampleID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Race)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ethnicity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IOP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IOPM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Incisional)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Smoking)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HTN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CVD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CVA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Collagen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Diabetes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SysDiseases)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Glaucoma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cataract)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DryEye)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Laser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiabL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OEyeD)
                </td>
                <td class="button">
                    <a asp-action="Edit" asp-route-id="@item.ClinicalDataID"><i class="fas fa-user-edit fa-2x"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.ClinicalDataID"><i class="fas fa-trash fa-2x"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<div class="row">
    <div class="col-12">
        <partial name="_bottomBar" model="@pager" />
    </div>
</div>

